{
	"construct class": {
		"prefix": "construct",
		"body": [
			"class $1",
			"{",
			"\tpublic function __construct()",
			"\t{",
			"\t\t//code",
			"\t}",
			"}"
		],
		"description": "brand new php class file"
	},
	"dump __file__ __function__": {
		"prefix": "df",
		"body": [
			"dump($1, __FILE__ . \"-\" . __FUNCTION__);"
		],
		"description": "dump __FILE__ and __FUNCTION__"
	},
	"dd __file__ __function__": {
		"prefix": "ddf",
		"body": [
			"dd($1, __FILE__ . \"-\" . __FUNCTION__);"
		],
		"description": "dump & die __FILE__ and __FUNCTION__"
	},
	"create class": {
		"prefix": "create",
		"body": [
			"class $1",
			"{",
			"\tprivate function __construct()",
			"\t{",
			"\t\t//code",
			"\t}",
			"",
			"\tpublic static function create(...\\$params)",
			"\t{",
			"\t\treturn new static(...\\$params);",
			"\t}",
			"}"
		],
		"description": "brand new php class file"
	},
	"try catch": {
		"prefix": "trycatch",
		"body": [
			"try {",
			"\t//code",
			"} catch(\\Exception \\$exception){",
			"\t throw new \\Exception(\"bla\");",
			"}",
			""
		],
		"description": "pre filled try"
	},
	"simple public function": {
		"prefix": "pubfun",
		"body": [
			"public function $1()",
			"{",
			"\t//code",
			"}"
		],
		"description": "simple public function declaration"
	},
	"simple protected function": {
		"prefix": "protfun",
		"body": [
			"protected function $1()",
			"{",
			"\t//code",
			"}"
		],
		"description": "simple protected function declaration"
	},
	"printr pre encapsulate": {
		"prefix": "pprintr",
		"body": [
			"echo '<pre>'; print_r($1); echo '</pre>';"
		],
		"description": "encapsulate printr with pre"
	},
	"die with __file__": {
		"prefix": "die",
		"body": [
			"die(\"\\e[30;48;5;166m\".__FILE__ . '::' . __LINE__ .\"\\e[0m\". PHP_EOL);"
		],
		"description": "Write a die with visible informations (to find it easily) in it"
	},
	"error_log_verbose": {
		"prefix": "perrorlog",
		"body": [
			"error_log(__FILE__.'::'.__FUNCTION__ .\" --- $1\");"
		],
		"description": "verbose error_log"
	},
	"var_dump pre encapsulate": {
		"prefix": "pvardump",
		"body": [
			"echo '<pre>'; var_dump(__FILE__.'::'.__FUNCTION__$1); echo '</pre>';"
		],
		"description": "encapsulate var_dump with pre"
	}
}